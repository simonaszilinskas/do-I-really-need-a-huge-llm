{
  "manifest_version": 3,
  "name": "Prompt Footprint Basic",
  "version": "0.0.1",
  "description": "Track your AI prompt carbon footprint",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://*.openai.com/*",
    "https://*.anthropic.com/*",
    "https://*.claude.ai/*",
    "https://*.bing.com/*",
    "https://*.google.com/*",
    "https://*.perplexity.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.openai.com/*",
        "https://*.anthropic.com/*",
        "https://*.claude.ai/*",
        "https://*.bing.com/*",
        "https://*.google.com/*",
        "https://*.perplexity.ai/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}